  <script>

  var elem = document.querySelector('.js-switch');
  var init = new Switchery(elem);

  var queryEditor;
  var queryEditorTextArea = $(".queryEditorTextArea")[0];

  var payloadEditor;
  var payloadEditorTextArea = $(".payloadEditorTextArea")[0];

  if (queryEditorTextArea) {
    queryEditor = CodeMirror.fromTextArea(queryEditorTextArea, {
      lineNumbers: true,
      tabSize: 4,
      smartIndent: true,
      matchBrackets: true,
    });

    queryEditor.on('change', function (e, t) {
      refreshQueryAudience();
    });
  }

  if (payloadEditorTextArea) {
    payloadEditor = CodeMirror.fromTextArea(payloadEditorTextArea, {
      lineNumbers: true,
      tabSize: 4,
      smartIndent: true,
      matchBrackets: true,
    });
  }

  </script>
