<link rel="stylesheet" href="/static/css/dashboard.css" media="screen" charset="utf-8">
<h1>Compose new push</h1>
<div class="dropdown">
  <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
    Choose app
    <span class="caret"></span>
  </button>

  <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
    {{li_apps}}
    <li><a href="#sampleApp">Sample app</a></li>
  </ul>
</div>

<form class="pushForm">
  <h2>Query:</h2>
  <div id="queryControl">
    <button onclick="removeQueryField();" class="btn btn-default" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
      Remove Query Field
    </button>

    <button onclick="addQueryField();" class="btn btn-default" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
      Add Query Field
    </button>

    <button onclick="refreshQueryAudience();" class="btn btn-default" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
      <span class="glyphicon glyphicon-refresh" aria-hidden="true"></span>
    </button>
  </div>
  <div class="queryForm">
    <div class="row">
      <div class="col-lg-6">
        <div class="input-group">
          <span class="input-group-addon" id="sizing-addon2">Query field</span>
          <input type="text" id="queryField" class="form-control" aria-label="...">
        </div><!-- /input-group -->
      </div><!-- /.col-lg-6 -->
      <div class="col-lg-6">
        <div class="input-group">
          <span class="input-group-addon" id="sizing-addon2">Query value</span>
          <input type="text" id="queryValue" class="form-control" aria-label="...">
        </div><!-- /input-group -->
      </div><!-- /.col-lg-6 -->
    </div><!-- /.row -->
  </div><!-- /.queryForm -->
  <h3 class="expectedAudience">Expected audience size: unknown</h3>
  <h2>Payload:</h2>
  <div id="payloadControl">
    <button class="btn btn-default" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
      Remove Payload Field
    </button>

    <button class="btn btn-default" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
      Add Payload Field
    </button>
  </div>
  <div class="payloadForm">
    <div class="input-group">
      <span class="input-group-addon" id="sizing-addon2">Alert </span>
      <input type="text" class="form-control" aria-label="...">
    </div><!-- /input-group -->
    <div class="row">
      <div class="col-lg-6">
        <div class="input-group">
          <span class="input-group-addon" id="sizing-addon2">Payload field</span>
          <input type="text" class="form-control" aria-label="...">
        </div><!-- /input-group -->
      </div><!-- /.col-lg-6 -->
      <div class="col-lg-6">
        <div class="input-group">
          <span class="input-group-addon" id="sizing-addon2">Payload value</span>
          <input type="text" class="form-control" aria-label="...">
        </div><!-- /input-group -->
      </div><!-- /.col-lg-6 -->
    </div><!-- /.row -->
  </div><!-- /.payloadForm -->
</form>
<script src="/static/js/dashboard.js" charset="utf-8"></script>
